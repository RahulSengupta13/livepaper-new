<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.LivePaper.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/deep_purple</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.LivePaper.Light" />

    <style name="Widget.LivePaper" parent="@android:style/Widget.Material" />

    <style name="Widget.LivePaper.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.LivePaper.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.LivePaper.ToolbarTitle
        </item>
    </style>

    <style name="TextAppearance.LivePaper.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Widget.LivePaper.NavigationHeaderBackground" parent="Widget.LivePaper">
        <item name="android:background">@color/purple</item>
    </style>

    <style name="Widget.LivePaper.Dialog.Style" parent="Theme.MaterialComponents.Dialog.Alert"/>

    <style name="Widget.LivePaper.TextView"/>

    <style name="Widget.LivePaper.TextView.Medium">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>
</resources>